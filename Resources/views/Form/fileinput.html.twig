{% block fileinput_widget %}
    {% spaceless %}
        {{
            form_widget(form.path, {"attr" : attr|merge({
                "class" : "fileinput form-control",
                "data-files" : files|json_encode(),
                "_delete" : form._delete.vars.id,
                "_name" : form._name.vars.full_name|default(null)
            })} )
        }}
        {{ form_widget(form._delete) }}
    {% endspaceless %}
{% endblock %}